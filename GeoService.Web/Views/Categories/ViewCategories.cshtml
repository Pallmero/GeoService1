@model GeoService.Web.Data.ViewModels.CategoriesViewModel

<container>
   <div class="card">
      @if (Model.Categories is null || Model.Categories.Count <= 0)
      {
          <h5 class="card-header" style="text-align:center">Nie dodano żadnej kategorii</h5>
          <div class="text-center">
             <a asp-controller="Categories" asp-action="CreateCategory" class="btn btn-info" style="margin-bottom:20px">Dodaj kategorię</a>
          </div>
      }
      else
      {
        <div class="table-responsive text-nowrap">
           <h5 class="card-header" style="display:inline-block">
                <a asp-controller="Categories" asp-action="CreateCategory" class="btn btn-info" style="display:inline-block">Dodaj kategorię</a>
           </h5>
           <table class="table table-bordered">
              <thead>
                 <tr>
                    <th style="width: 3%; text-align:center" class="fw-bold">Id</th>
                    <th class="fw-bold">Nazwa</th>
                    <th style="width: 3%; text-align:center" class="fw-bold">Edytuj</th>
                 </tr>
              </thead>
              @{ 
                  var i = 1; 
                  foreach (var category in Model.Categories)
                  {
                      <tbody class="table-border-bottom-0">
                         <tr>
                            <td style="width: 3%; text-align:center">@i</td>
                            <td>@category?.Name</td>
                            <td style="width: 3%; text-align:center"><a asp-controller="Categories" asp-action="UpdateCategory" asp-route-id="@category.Id"><i class='bx bx-edit-alt'></i></a></td>
                         </tr>
                      </tbody>
                      i++;
                  }
              }
           </table>
        </div>
      }
   </div>
</container>